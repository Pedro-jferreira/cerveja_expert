<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BuscarCervejaActivity">

    <Spinner
        android:id="@+id/spinnerCerveja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/tipos_cerveja"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.226"
        tools:layout_editor_absoluteX="-16dp" />

    <Button
        android:id="@+id/botaoBuscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar Marcas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/marcasCerveja"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/marcasCerveja"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:paddingTop="16dp"
        android:text="Selecione uma marca de cerveja"
        app:layout_constraintTop_toBottomOf="@+id/spinnerCerveja"
        tools:layout_editor_absoluteX="16dp" />
</androidx.constraintlayout.widget.ConstraintLayout>